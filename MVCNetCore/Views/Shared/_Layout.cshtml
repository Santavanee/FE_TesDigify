<style>
    .card-section {
        background-color: white;
        border: 1px solid #003366;
        border-radius: 6px;
        margin-bottom: 20px;
        overflow: hidden;
    }

    .section-header {
        background-color: #003366;
        color: white;
        padding: 10px 20px;
        font-weight: bold;
        display: flex;
        justify-content: space-between;
        align-items: center;
        cursor: pointer;
        flex-direction: column;
    }

    .section-header h4 {
        margin: 0;
        font-weight: 600;
        font-size: 1.2rem;
    }

    .section-body {
        padding: 20px;
    }

    .form-group label {
        font-weight: 500;
    }
</style>

